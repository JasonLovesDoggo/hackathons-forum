{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "DATABASE_URL",
    "REVALIDATE_SECRET",
    "NEXT_PUBLIC_BASE_URL",
    "NEXT_PUBLIC_GUILD_ID"
  ],
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    }
  }
}
