{
  "name": "@hackathons-forum/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "migrate": "bun ./migrate.ts",
    "migrate:down": "node_modules/cross-env MIGRATE_OP=down bun ./migrate.ts",
    "migrate:list": "node_modules/cross-env MIGRATE_OP=list bun ./migrate.ts",
    "db-codegen": "kysely-codegen --dialect postgres --out-file ./schema.ts",
    "lint": "eslint ."
  },
  "exports": {
    "./node": {
      "import": "./build/node.js"
    },
    "./nextjs": {
      "import": "./build/nextjs.js"
    }
  },
  "dependencies": {
    "kysely": "^0.27.3",
    "kysely-planetscale": "^1.3.0",
    "pg": "^8.11.4"
  },
  "devDependencies": {
    "@hackathons-forum/tsconfig": "workspace:*",
    "@types/pg": "^8.11.4",
    "dotenv": "^16.4.5",
    "kysely-codegen": "^0.14.2",
    "typescript": "^5.4.3",
    "cross-env": "^7.0.3"
  }
}
